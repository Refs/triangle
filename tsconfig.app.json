{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "module": "es2015",
    "baseUrl": ".",
    "paths": {
      "@gradii/*": [
        "libs/*"
      ],
      "@gradii/triangle/*": [
        "libs/triangle/src/*"
      ]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "node_modules",
    "tmp",
    "triangle-ui",
    "tools",
    "dist",
    "libs"
  ]
}

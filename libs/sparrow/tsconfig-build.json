// TypeScript config file that is used to compile the library into ES2015.
{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "importHelpers": true,
    "newLine": "lf",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../dist/packages/sparrow",
    "rootDir": ".",
    "rootDirs": [
      "."
    ],
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "lib": [
      "es2015",
      "dom",
      "es2016.array.include",
      "es2017"
    ],
    "skipLibCheck": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@gradii/sparrow/*": [
        "./src/*"
      ]
    }
  },
  "files": [
    "public-api.ts",
    "typings.d.ts"
  ]
}
